<% if @phone_number.errors.any? %> 
  <% @phone_number.errors.each do |attribute, message| %>
    <%= message %>
  <% end %>
<% end %>




<%= form_for(@phone_number) do |f| %>
  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_area :number, placeholder: 'Format: +19081721234' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
