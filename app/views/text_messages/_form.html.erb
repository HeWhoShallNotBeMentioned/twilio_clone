<%= form_for(@text_message, remote: true) do |f| %>
  <div class="field">
    <%= f.label :to %><br>
    <%= f.select(:to) do %>
      <% current_user.phone_book.phone_numbers.each do |phone_number| -%>
        <%= content_tag(:option, phone_number.number, value: phone_number.number) %>
      <% end %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :from %><br>
    <p>+18482316564</p>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
