<%= form_for(@text_message, remote: true) do |f| %>

  <div class="field">
    <%= f.label :to %><br>
    <%= f.text_area :to, placeholder: 'Format: +19081721234,+19081721234' %>
  </div>
  <div class="field">
    <%= f.label :from %><br>
    <%= f.text_area :from %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
